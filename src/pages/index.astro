---
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Services from "../components/Services.astro";
import Contact from "../components/Contact.astro";
import Layout from "../layouts/Layout.astro";
import siteContent from "../content/site.json";
import Footer from "../components/Footer.astro";
import Clients from "../components/Clients.astro";
import Header from "../components/Header.astro";
---

<Layout>
  <Header />
  <Hero
    title={siteContent.hero_title}
    subtitle={siteContent.hero_subtitle}
    description={siteContent.hero_description}
  />
  <Services
    heading={siteContent.services_heading}
    subheading={siteContent.services_subheading}
    introHeading={siteContent.services_intro_heading}
    introText={siteContent.services_intro_text}
    card1Heading={siteContent.services_card1_heading}
    card1Text={siteContent.services_card1_text}
    card2Heading={siteContent.services_card2_heading}
    card2Text={siteContent.services_card2_text}
    card3Heading={siteContent.services_card3_heading}
    card3Text={siteContent.services_card3_text}
  />
  <About
    heading={siteContent.about_heading}
    subheading={siteContent.about_subheading}
    textSectionHeading={siteContent.about_intro_heading}
    textSectionContent={siteContent.about_intro_text}
  />
  <Clients heading={siteContent.clients_heading} />
  <Contact heading={siteContent.contact_heading} />
  <Footer />
</Layout>

<script is:inline src="/edit.js"></script>
