---
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Services from "../components/Services.astro";
import Contact from "../components/Contact.astro";
import Layout from "../layouts/Layout.astro";
import siteContent from "../content/site.json";
import Footer from "../components/Footer.astro";
import Clients from "../components/Clients.astro";
import Header from "../components/Header.astro";
---

<Layout>
  <Header />
  <Hero
    title={siteContent.hero.title}
    subtitle={siteContent.hero.subtitle}
    description={siteContent.hero.description}
  />
  <Services
    heading={siteContent.services.heading}
    subheading={siteContent.services.subheading}
    introHeading={siteContent.services.intro_heading}
    introText={siteContent.services.intro_text}
    card1Heading={siteContent.services.card1_heading}
    card1Text={siteContent.services.card1_text}
    card2Heading={siteContent.services.card2_heading}
    card2Text={siteContent.services.card2_text}
    card3Heading={siteContent.services.card3_heading}
    card3Text={siteContent.services.card3_text}
  />
  <About
    heading={siteContent.about.heading}
    subheading={siteContent.about.subheading}
    textSectionHeading={siteContent.about.intro_heading}
    textSectionContent={siteContent.about.intro_text}
  />
  <Clients
    heading={siteContent.clients.heading}
    subheading={siteContent.clients.subheading}
    introHeading={siteContent.clients.intro_heading}
    introText={siteContent.clients.intro_text}
    card1Heading={siteContent.clients.card1_heading}
    card1Text={siteContent.clients.card1_text}
    card2Heading={siteContent.clients.card2_heading}
    card2Text={siteContent.clients.card2_text}
    card3Heading={siteContent.clients.card3_heading}
    card3Text={siteContent.clients.card3_text}
  />
  <Contact
    heading={siteContent.contact.heading}
    subheading={siteContent.contact.subheading}
    contactName={siteContent.contact.name}
    contactEmail={siteContent.contact.email}
    contactPhone={siteContent.contact.phone}
  />
  <Footer />
</Layout>

<script is:inline src="/edit.js"></script>
