---
interface Props {
  textSectionHeading?: string;
  textSectionContent: string;
  grayBackground?: boolean;
  pageName: string;
  headingEditableKey?: string;
  contentEditableKey?: string;
}
const {
  textSectionHeading,
  textSectionContent,
  grayBackground,
  pageName,
  headingEditableKey,
  contentEditableKey,
} = Astro.props;
---

<div
  class:list={[
    "grid sm:grid-cols-[170px_1fr] md:gap-x-0 gap-x-4 grid-cols-[auto_1fr] gap-4 py-4 pb-16 px-8",
    { "bg-custom-gray": grayBackground },
  ]}
>
  <p class="text-sm">Pollux</p>
  <p class="text-sm">{pageName}</p>
  <div class="sm:col-start-2 col-span-2 mt-4">
    {
      textSectionHeading && (
        <h2 data-editable={headingEditableKey}>{textSectionHeading}</h2>
      )
    }
    <p class="text-2xl" data-editable={contentEditableKey}>
      {textSectionContent}
    </p>
    <slot />
  </div>
</div>
