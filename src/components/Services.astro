---
interface Props {
  heading?: string;
  text?: string;
}

const {
  heading = "Our Services",
  text = "We offer comprehensive web development, cloud infrastructure setup, and digital transformation consulting."
} = Astro.props;
---

<section id="services" class="py-16 px-4 bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-6 text-center" data-editable="services_heading">{heading}</h2>
    <p class="text-lg text-gray-700 leading-relaxed" data-editable="services_text">{text}</p>
  </div>
</section>
