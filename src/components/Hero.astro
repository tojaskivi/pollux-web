---
import { heroImage } from "../assets/images";
import { logomark } from "../assets/icons";
import { Image } from "astro:assets";
interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
}

const { title = "Resultat börjar med människor" } = Astro.props;
---

<section id="hero" class="min-h-screen relative">
  <Image
    src={heroImage}
    alt="Hero Image"
    width={1920}
    height={1080}
    class="absolute inset-0 w-full h-full object-cover -z-1"
  />
  <div class="flex items-center gap-4 ml-[96px] min-h-screen pt-[30vh]">
    <Image
      src={logomark}
      alt="Pollux Logomark"
      width={0}
      height={0}
      class="w-24 h-auto"
    />
    <h1 class="text-white" data-editable="hero_title">{title}</h1>
  </div>
</section>
