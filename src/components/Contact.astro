---
interface Props {
  heading?: string;
  email?: string;
  phone?: string;
}

const {
  heading = "Get In Touch",
  email = "hello@example.com",
  phone = "+1 (555) 123-4567"
} = Astro.props;
---

<section id="contact" class="py-16 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-8" data-editable="contact_heading">{heading}</h2>
    <div class="space-y-4">
      <p class="text-lg">
        <span class="font-semibold">Email:</span>
        <span class="ml-2" data-editable="contact_email">{email}</span>
      </p>
      <p class="text-lg">
        <span class="font-semibold">Phone:</span>
        <span class="ml-2" data-editable="contact_phone">{phone}</span>
      </p>
    </div>
  </div>
</section>
